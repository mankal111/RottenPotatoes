-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => (params[:sortby] == "title"? "hilite" : nil)} 
        %a= link_to "Movie Title", movies_path({:sortby => "title"})
      %th Rating
      %th{:class => (params[:sortby] == "release_date"? "hilite" : nil)} 
        %a= link_to "Release Date", movies_path({:sortby => "release_date"})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
